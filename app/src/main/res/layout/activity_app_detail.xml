<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AppDetailActivity"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <ImageView
            android:layout_marginLeft="-1dp"
            android:scaleType="matrix"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:src="@drawable/house6" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:background="#3c64bf"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:text="방주인에게 매물정보의 거래상태를 확인받은 매물입니다. .. "/>
            <TextView
                android:background="#2f58b5"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="\?"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인매물 19.04.03"
                android:textColor="#026cff"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/detailPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월세 500/40"
                android:textColor="#000000"
                android:textSize="30dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.6호선 불광역1분,도배,청소완료 관리잘 된원룸"
                android:textColor="#747474"/>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/topbottom"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/img1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/img2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            
                <ImageView
                    android:layout_marginTop="-2dp"
                    android:src="@drawable/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/flootTxt2"
                    android:layout_marginTop="-3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4층"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#969696"/>
                
            </LinearLayout>
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/img4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="#F2f2f2"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="풀옵션"
                android:textColor="#000000"
                android:textSize="17dp"/>
            <TextView
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엘리베이터"
                android:textColor="#000000"
                android:background="#F2F2F2"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빌트인"
                android:background="#F2F2F2"
                android:textColor="#000000"
                android:textSize="17sp"/>


        </LinearLayout>
        <LinearLayout

           android:background="#FFFFFF"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="17dp"
                android:background="#4383ff"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문자상담"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:padding="17dp"
                android:background="#4383ff"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화상담"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>